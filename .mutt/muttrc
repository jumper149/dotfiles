# personal info
set realname="Felix Springer"

# general
set editor="$EDITOR"
set send_charset="utf-8"
set sort_aux="reverse-date"
unset markers # remove "+" at the beginning of wrapped lines in pager
set wait_key="no"
set print_command="mail-to-pdf"
set print="ask-yes"
set pager_stop="yes"

# bindings
source "~/.mutt/bindings"

# colors
source "~/.mutt/colors"

# sidebar
set sidebar_visible="yes"
source "~/.mutt/sidebar"

# threads (enable by sourcing file)
source "~/.mutt/threads"

# mailcap
set mailcap_path= ~/.mutt/mailcap
auto_view text/html

# signing and encrypting
source "~/.mutt/gpg.rc"
source "~/.mutt/sec"

# khard
set query_command="khard email --parsable %s"
macro index,pager a "<pipe-message>khard add-email<return>" "Add this sender to khard"
bind editor <Tab> complete-query

# urlscan
macro pager U "<pipe-message>urlscan<enter>" "Extract URLs with urlscan"

# addresses
source "~/.mutt/possehl-analytics"
folder-hook $folder 'source ~/.mutt/possehl-analytics'

# at the end of config to focus on startup
source "~/.mutt/gmail"
folder-hook $folder 'source ~/.mutt/gmail'
