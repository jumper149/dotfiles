set imap_user 		= "felixspringer149@gmail.com"

set smtp_url 		= "smtp://felixspringer149@gmail.com:465/"
set from 		= "felixspringer149@gmail.com"
set realname 		= "Felix Springer"

set edit_headers 	= yes
set mbox_type 		= Maildir
set sendmail 		= /usr/bin/msmtp

set folder = "~/.mail/gmail"
#source ~/.mutt/mailboxes

set spoolfile = "+INBOX"
set mbox = "+[Gmail].All Mail"
set record = "+[Gmail].Sent Mail"
set postponed = "+[Gmail].Drafts"

set editor=`echo \$EDITOR`

# <space>s in foldernames dont work, set up symlinks
macro index gi "<change-folder>=INBOX<enter>" "go to inbox"
macro index ga "<change-folder>=../[Gmail].All_Mail_gmail<enter>" "go to all mail"
macro index gd "<change-folder>=[Gmail].Drafts<enter>" "go to draft"
macro index gm "<change-folder>=[Gmail].Important<enter>" "go to important"
macro index go "<change-folder>=../[Gmail].Sent_Mail_gmail<enter>" "go to sent mail"
macro index gs "<change-folder>=[Gmail].Spam<enter>" "go to spam"
macro index gn "<change-folder>=[Gmail].Starred<enter>" "go to starred"
macro index gt "<change-folder>=[Gmail].Trash<enter>" "go to trash"
