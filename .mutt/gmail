#macro index cs "<change-folder>=[Gmail].Spam<enter>" "go to spam"
#macro index cn "<change-folder>=[Gmail].Starred<enter>" "go to starred"
#macro index ct "<change-folder>=[Gmail].Trash<enter>" "go to trash"

# hook important
account-hook $folder "set imap_user=felixspringer149@gmail.com"

