set sort="threads"

bind index c collapse-all

bind index J next-thread
bind index K previous-thread
#bind index ? parent-message
bind index T tag-thread
bind index D delete-thread
bind index U undelete-thread
bind index M read-thread
bind index C collapse-thread

#bind index ?d delete-subthread
#bind index ?u undelete-subthread
#bind index ?j next-subthread
#bind index ?k previous-subthread

