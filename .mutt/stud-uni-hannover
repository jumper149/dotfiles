#macro index cs "<change-folder>=Junk<enter>" "go to junk (spam)"
#macro index cn "<change-folder>=<enter>" "unset macro"
#macro index ct "<change-folder>=Trash<enter>" "go to trash"

# hook important
account-hook $folder "set imap_user=felix.springer@stud.uni-hannover.de"

