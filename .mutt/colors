# set default
color normal     none      white         default

# main colors
color status     none      green         default
color indicator  bold      brightdefault default
color tree       bold      brightblue    default
color error      bold      brightred     default
color message    bold      brightyellow  default
color prompt     none      default       default

# color all mailing-list mails
color index      none      cyan          default "~u"
color index      bold      brightcyan    default "~N ~u" # new

# and recolor them appropriately
color index      none      blue          default "~P"     # from me
color index      bold      brightyellow  default "~N !~u" # new from non-mailing-list
color index      bold      brightmagenta default "~T"     # tagged
color index      bold      brightgreen   default "~F"     # flagged
color index      bold      brightred     default "~D"     # deleted

# set up the headers
color hdrdefault none      blue          default
color header     none      brightyellow  default "^from:"
color header     none      brightgreen   default "^to:"
color header     none      green         default "^cc:"
color header     none      cyan          default "^date:"
color header     none      brightblue    default "^subject:"
color header     none      magenta       default "^(x-mailer|user-agent):"

# message bodies
color attachment none      brightblack   default
color search     none      brightblack   brightyellow
color signature  none      cyan          default
color tilde      none      blue          default
color markers    none      magenta       default

# urls
color body       none      brightcyan    default "(^|<| )mailto:[^ ]+@[^ ]( |>|$)"
color body       none      brightcyan    default "(^|<| )(http|https|ftp|file|telnet|news|finger)://[^ ]+( |>|$)"

# smileys, forwards and backwards
color body       none      yellow        default "(^| )+(|[<>|])[8;:](|[^ ])[)(/|DOPS]( |$)+"
color body       none      yellow        default "(^| )+[)(/|DOPS](|[^ ])[8;:](|[<>|])( |$)+"

# *bold*, _underline_, and /italic/
color bold       bold      cyan          default
color body       bold      cyan          default "(^| )\\*[^ ]+\\*( |$)"
color underline  underline cyan          default
color body       underline cyan          default "(^| )_[^ ]+_( |$)"
color body       bold      cyan          default "(^| )/[^ ]+/( |$)"

# quote blocks
color quoted     none      magenta       default
color quoted1    none      cyan          default
color quoted2    none      green         default
color quoted3    none      blue          default
color quoted4    none      magenta       default
color quoted5    none      cyan          default
color quoted6    none      green         default
color quoted7    none      blue          default

# compose menu
color compose header           none      blue          default
color compose security_none    bold      white         default
color compose security_sign    bold      green         default
color compose security_encrypt bold      red           default
color compose security_both    bold      default       default

# sidebar
color sidebar_divider          none      green         default
color sidebar_flagged          none      brightred     default
color sidebar_highlight        none      brightdefault default
color sidebar_indicator        none      brightgreen   default
color sidebar_new              none      brightyellow  default
color sidebar_spoolfile        bold      white         default

