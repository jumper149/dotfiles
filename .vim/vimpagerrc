source ${HOME}/.config/vim/vimrc

set norelativenumber
set nonumber
set scrolloff=0

if &t_Co >= 256
  highlight CursorLine ctermbg = bg
  highlight CursorLine ctermfg = fg
endif

let g:loaded_airline = 1

if !exists('g:vimpager.enabled')
  let g:vimpager = {}
endif
let g:vimpager.ansiesc = 1

if !exists('g:less')
  let g:less = {}
endif
let g:less.scrolloff = 0

" vim: syntax=vim
