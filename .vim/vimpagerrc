source ~/.vimrc

if !exists('g:vimpager')
  let g:vimpager = {}
endif

if !exists('g:less')
  let g:less     = {}
endif

let g:vimpager.passthrough = 0
let g:vimpager.scrolloff = 0
let g:vimpager.ansiesc = 0

set norelativenumber
set nonumber

if &t_Co >= 256
  highlight CursorLine ctermbg=bg
  highlight CursorLine ctermfg=fg
endif

let g:loaded_airline= 1
