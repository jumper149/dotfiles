alias mic-to-out='${HOME}/.scripts/mic-to-out.sh'

# connect to a bluetooth device
alias bluetooth-connect='${HOME}/.scripts/bluetooth-connect.sh'

# ranger-cd
function ranger-cd {
	tempfile="$(mktemp -t tmp.XXXXXX)"
	ranger --choosedir="$tempfile" "${@:-$(pwd)}"
	test -f "$tempfile" &&
		if [ "$(cat -- "$tempfile")" != "$(echo -n $(pwd))" ]; then
			cd -- "$(cat "$tempfile")"
		fi
		rm -f -- "$tempfile"
	}

# clear ranger-trash
