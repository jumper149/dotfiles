# general variables, aliases and functions

# colored ls
alias ls='ls --color=auto'

# dotfiles
alias dotgit='git --git-dir=${HOME}/.dotfiles --work-tree=${HOME}'
alias safegit='git --git-dir=${HOME}/.dotsafe --work-tree=${HOME}'

# pastebin
alias sprunge='curl -F "sprunge=<-" http://sprunge.us'
alias ixio='curl -F "f:1=<-" http://ix.io'

# ranger-cd
function ranger-cd {
	tempfile="$(mktemp -t tmp.XXXXXX)"
	ranger --choosedir="$tempfile" "${@:-$(pwd)}"
	test -f "$tempfile" &&
		if [ "$(cat -- "$tempfile")" != "$(echo -n $(pwd))" ]; then
			cd -- "$(cat "$tempfile")"
		fi
		rm -f -- "$tempfile"
	}

# clear ranger-trash
alias ranger-trash-clear='${HOME}/.config/ranger/empty_trash.sh'

# fastermelee
alias fastermelee='LD_LIBRARY_PATH=${HOME}/Templates/fm-git/lib/ ${HOME}/Templates/fm-git/FasterMelee-installer/src/launch-fm'

# generate a random password
random-password(){ < /dev/urandom tr -dc _A-Z-a-z-0-9 | head -c"${1:-16}";echo;}

